@model EmployeeManagementMVC.Models.EMPLOYEE

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<div id="DisplayNewId">

</div>

