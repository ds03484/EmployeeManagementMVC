}

<div>
    @Html.ActionLink("Back to Home Page", "Index")
</div>

@section scripts{
    <script type="text/javascript">
        $('#register-form').on('submit', function (e) {
            e.preventDefault();
            $.ajax({
                type: this.method,
                url: this.action,
                data: $(this).serialize(),
                success: function (data) {
                    $('#DisplayNewId').html(data);
                }
            });
        });
    </script>
      
}
